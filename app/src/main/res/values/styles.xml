<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ToolBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_64</item>
        <item name="titleTextAppearance">@style/ToolBarText</item>
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="android:paddingVertical">4dp</item>
    </style>

    <style name="ToolBarText">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_display_medium_22</item>
    </style>
    
    <style name="BottomNavigation">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="menu">@menu/navigation_items</item>
        <item name="elevation">@dimen/elevation_0</item>
    </style>

    <style name="BottomNavigationDivider">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">@dimen/height_1</item>
        <item name="android:background">@color/yp_light_gray</item>
    </style>

    <style name="TextViewTeam">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_92</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_bold</item>
        <item name="android:text">@string/app_team</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">@dimen/ys_display_bold_32</item>
    </style>
    
    <style name="TextViewTeamMember">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:layout_marginHorizontal">@dimen/margin_16</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_display_medium_16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="LinearLayoutVacancy">
        <item name="android:layout_width">@dimen/width_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_16</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TextViewMediumVacancy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/ys_display_medium_16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextViewRegularVacancy">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_4</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/ys_display_regular_16</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
</resources>
