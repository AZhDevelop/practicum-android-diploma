<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filter.FilterFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/set_filters" />

    <LinearLayout
        android:id="@+id/workplace_layout_1"
        android:layout_width="@dimen/width_0"
        android:layout_height="60dp"

        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginLeft="@dimen/margin_16"

            android:layout_weight="1"


            android:maxLines="1"
            android:singleLine="true"

            android:text="Место работы"

            android:textSize="@dimen/ys_display_regular_16"
            android:fontFamily="@font/ys_display_regular"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:src="@drawable/ic_forward" />


    </LinearLayout>






    <LinearLayout
        android:id="@+id/workplace_layout_2"
        android:layout_width="@dimen/width_0"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:padding="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="60dp"

            android:orientation="vertical"
            android:padding="0dp"

            android:layout_weight="1"


            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:layout_marginLeft="16dp"

                android:layout_marginTop="12.5dp"



                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:text="Место работы"

                android:textSize="@dimen/ys_display_regular_12"

                android:textColor="?attr/colorOnSurface"


                />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginLeft="16dp"

                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:text="Россия, Москва"

                android:textSize="@dimen/ys_display_regular_16"

                android:textColor="?attr/colorOnSurface"

                />




        </LinearLayout>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:src="@drawable/ic_close" />


    </LinearLayout>





    <LinearLayout
        android:id="@+id/industry_layout_1"
        android:layout_width="@dimen/width_0"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:padding="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplace_layout_1">


        <TextView


            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginLeft="16dp"

            android:layout_weight="1"

            android:fontFamily="@font/ys_display_regular"

            android:maxLines="1"

            android:singleLine="true"

            android:text="Отрасль"

            android:textSize="@dimen/ys_display_regular_16"

            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:src="@drawable/ic_forward" />


    </LinearLayout>





    <LinearLayout
        android:id="@+id/industry_layout_2"
        android:layout_width="@dimen/width_0"
        android:layout_height="60dp"

        android:orientation="horizontal"
        android:padding="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/workplace_layout_1">


        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="60dp"

            android:orientation="vertical"
            android:padding="0dp"

            android:layout_weight="1"


            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:layout_marginLeft="16dp"

                android:layout_marginTop="12.5dp"



                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:text="Отрасль"

                android:textSize="@dimen/ys_display_regular_12"

                android:textColor="?attr/colorOnSurface"


                />


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginLeft="16dp"

                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:text="IT"

                android:textSize="@dimen/ys_display_regular_16"

                android:textColor="?attr/colorOnSurface"

                />




        </LinearLayout>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:src="@drawable/ic_close" />


    </LinearLayout>









    <LinearLayout
        android:id="@+id/salary_layout_1"
        android:layout_width="@dimen/width_0"
        android:layout_height="51dp"

        android:orientation="horizontal"
        android:padding="0dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/industry_layout_1"

        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginRight="@dimen/margin_16"


        android:layout_marginTop="24dp"

        android:background="@drawable/rounded_item"


        >




        <LinearLayout

            android:layout_width="0dp"
            android:layout_height="51dp"

            android:orientation="vertical"
            android:padding="0dp"

            android:layout_weight="1"


            >


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"



                android:layout_marginLeft="16dp"

                android:layout_marginTop="8dp"



                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:text="Ожидаемая зарплата"

                android:textSize="@dimen/ys_display_regular_12"




                />


            <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_marginLeft="16dp"


                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"


                android:fontFamily="@font/ys_display_regular"

                android:maxLines="1"

                android:singleLine="true"

                android:hint="Введите сумму"

                android:textSize="@dimen/ys_display_regular_16"

                android:textColor="?attr/colorOnSurface"


                android:textCursorDrawable="@drawable/ic_cursor"

                android:background="@android:color/transparent"

                android:inputType="number"


                android:imeOptions="actionNext"


                />









        </LinearLayout>




        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"




            android:layout_marginRight="16dp"

            android:src="@drawable/ic_close" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="@dimen/width_0"
        android:layout_height="60dp"

        android:layout_marginTop="24dp"
        android:orientation="horizontal"

        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"


        app:layout_constraintStart_toStartOf="parent"


        app:layout_constraintTop_toBottomOf="@id/salary_layout_1">


        <TextView


            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:layout_marginLeft="16dp"

            android:layout_weight="1"

            android:fontFamily="@font/ys_display_regular"

            android:maxLines="1"

            android:singleLine="true"

            android:text="Не показывать без зарплаты"

            android:textColor="?attr/colorOnSurface"

            android:textSize="@dimen/ys_display_regular_16"

            />


        <CheckBox
            android:id="@+id/salaryCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_gravity="center"

            android:buttonTint="?attr/colorPrimary"


            />




        <!--

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center_vertical"

            android:layout_marginRight="16dp"

            android:src="@drawable/ic_forward" />

-->


    </LinearLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonApply"

        android:layout_width="0dp"
        android:layout_height="59dp"

        android:layout_marginHorizontal="17dp"

        android:layout_marginBottom="28dp"

        android:background="@drawable/applybutton_background"

        android:enabled="true"
        android:fontFamily="@font/ys_display_medium"
        android:text="Применить"

        android:textAllCaps="false"
        android:textColor="?attr/colorOnPrimary"



        android:textSize="@dimen/ys_display_medium_16"
        android:visibility="visible"

        app:layout_constraintBottom_toTopOf="@id/buttonReset"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:visibility="visible" />



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonReset"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="17dp"

        android:layout_marginBottom="44dp"

        android:padding="0dp"

        android:minWidth="0dp"
        android:minHeight="0dp"

        android:background="@null"

        android:enabled="true"
        android:fontFamily="@font/ys_display_medium"
        android:text="Сбросить"

        android:textAllCaps="false"
        android:textColor="@color/yp_red"



        android:textSize="@dimen/ys_display_medium_16"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        tools:visibility="visible" />
























