<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.workplace.WorkplaceFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        style="@style/ToolBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_back"
        app:title="@string/set_vacancy_place" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/country"
        app:boxStrokeColor="@android:color/transparent"
        app:boxStrokeWidth="@dimen/_0dp"
        app:boxStrokeWidthFocused="@dimen/_0dp"
        app:endIconDrawable="@drawable/ic_forward"
        app:endIconMode="custom"
        app:endIconTint="@color/icon_color"
        app:hintTextColor="@color/icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/countryEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:hint="@string/region"
        app:boxStrokeColor="@android:color/transparent"
        app:boxStrokeWidth="@dimen/_0dp"
        app:boxStrokeWidthFocused="@dimen/_0dp"
        app:endIconDrawable="@drawable/ic_forward"
        app:endIconMode="custom"
        app:endIconTint="@color/icon_color"
        app:hintTextColor="@color/icon_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/inputCountry">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/regionEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="false" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/selectButton"
        android:layout_width="@dimen/select_button_width_326dp"
        android:layout_height="@dimen/select_button_height_60dp"
        android:layout_marginBottom="@dimen/padding_16"
        android:backgroundTint="@color/yp_blue"
        android:fontFamily="@font/ys_display_medium"
        android:text="Выбрать"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/ys_display_medium_16"
        app:cornerRadius="@dimen/radius_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
