<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"

        android:layout_marginLeft="@dimen/margin_16"

        android:layout_marginTop="@dimen/margin_11"
        android:layout_marginBottom="@dimen/margin_11"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/industryRadioButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:maxLines="5"
        android:singleLine="false"

        android:textColor="?attr/colorOnSurface"
        android:textSize="@dimen/ys_display_regular_16"
        android:fontFamily="@font/ys_display_regular"
        tools:text="@string/industries_item_test_text"
        />

    <RadioButton
        android:id="@+id/industryRadioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:buttonTint="?attr/colorPrimary" />
</androidx.constraintlayout.widget.ConstraintLayout>
